<% emory_faculty = ["Emory Committee Member", "Non-Emory Committee Member"] %>

<div class="committee-member row first">
  <div class="col-sm-6 member">
    <%= f.fields_for :committee_members_0 do |c| %>
    <%= c.input "affiliation_type", selected: emory_faculty[0], required: false, label: "Committee Member's Affiliation",
         collection: emory_faculty,
          input_html: { class: 'form-control committee-member-select' } %>
    <%= c.input :affiliation, disabled: true, required: false, label: false, input_html: { class: 'form-control committee', value: "Emory"} %>
  </div>

  <div class="col-sm-6 member-affiliation">
    <%= c.input :name, label: "Committee Member", required: false, input_html: { placeholder: 'Last Name, First Name', class: 'form-control committee' } %>
  </div>
  <% end %>
</div>

